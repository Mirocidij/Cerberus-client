#!groovy

properties([disableConcurrentBuilds()])

pipeline {
    agent any

    options {
        timestamps()
    }

    stages {
        stage('Build') {
            steps {
                git 'https://github.com/Mirocidij/Cerberus-client.git'
                sh 'npm install -s'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Deliver') {
            steps {
                sh 'npm run build'
                sh 'npm start'
            }
        }
    }
}